@TECHREPORT{vedolin_2012,
  author = {Philippe Mueller and Andreas Stathopoulos and Andrea Vedolin},
  title = {International Correlation Risk},
  institution = {Financial Markets Group},
  year = {2012},
  type = {FMG Discussion Papers},
  number = {dp716},
  abstract = {We provide novel evidence of priced correlation risk in the foreign
